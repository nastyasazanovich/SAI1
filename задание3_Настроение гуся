#include "stdafx.h"
#include<iostream>
using namespace std;

int main()
{
	setlocale(LC_ALL, "RUSSIAN");
	double a, b;
	cout <<Это настроение Гуся. Если гусь доволен, введите 1, если не доволен, введите 2." << endl;
	cin >> a;

	if (a == 1) {
		cout << "Все хорошо!" << endl;
	}
	else if (a == 2) {
		cout << "Гусь хочет гулять !" << endl;
	} 
	else {
		cout << "Гусь без настроения.( " << endl;
	}

	system("pause"); 
    return 0;
}
