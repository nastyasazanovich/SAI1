int main()
{
    setlocale(LC_ALL, "RUSSIAN");
    char ch;
    short int a,b,otv;
    cout << "введите первое число" << endl;
    cin >> a;
    cout << " введите второе число"<<endl;
    cin >> b;
    cout << " введите ответ"<<endl;
